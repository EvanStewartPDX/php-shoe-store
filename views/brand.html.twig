<html>
<head>
    <title>Shoe Network</title>
</head>
<body>
    <div class = "container">
        <div class = "jumbotron">
            <h1>{{ brand.getName }}</h1>
        </div>
        <div class = "well">
            <h4>Add a store to this brand:</h4>

            <form action='/brand/{{ brand.getId }}' method='post'>
                <input id="brand_id" name="brand_id" type="hidden" value="{{ brand.getId }}">
                <label for="store_id">Select a store</label>
                <select id='store_id' name='store_id' type='text'>
                    {% if stores2 is not empty %}
                        {% for store in stores2 %}
                          <option value="{{ store.getId }}"> {{ store.getName }} </option>
                        {% endfor %}
                    {% endif %}
                </select>
                <button type='submit' class="btn btn-default">Add Store</button>
            </form>
        </div>
        {% if stores2 is not empty %}
            <div class = "well">
                <h3>Here are the stores for this Brand</h3>
                <br />
                    <ul>
                        {% for store in stores %}
                            <li><h4> {{ store.getName }} </h4></li>
                        {% endfor %}
                    </ul>
            </div>
        {% endif %}

        <br />



        <button type="button" class="btn btn-default"><a href='/stores'>See All Stores</a></button>
        <br>
        <button type="button" class="btn btn-home"><a href='/'>Home</a></button>
    </div>
</body>
</html>
