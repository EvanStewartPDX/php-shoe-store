<html>
<head>
    <title>Shoe Store</title>
</head>
<body>
    <div class = "container">
        <div class = "jumbotron">
            <h1>Available Stores</h1>
        </div>
        <div class = "well">
            <form action'/stores' method='post'>
                <label for='storename'>Store Name</label>
                <input id='storename' name='storename' type='text'>

                <button type='submit' class="btn btn-default">Add Store</button>
            </form>
        </div>
        <div class = "row">
            <div class = "col-md-8">
                <div class = "well">
                    {% if stores is not empty %}
                        <ul>
                            {% for store in stores %}
                                <div class = "row">
                                    <div class = "col-sm-3">
                                        <li><h4><a href="/store/{{ store.getId }}">{{ store.getName }}</a></h4></li>
                                        <form class="edit" action="/{{store.id}}/edit" method="post">
                                            <input name="store" type="hidden" value="{{store.id}}">
                                            <input name="_method" type="hidden" value="patch">
                                            <input class="form" type="hidden" name="store_id" value={{store.id}}>
                                            <label for="">Edit Store Name</label>
                                            <input class="form" type="text" name="name" value="">
                                            <button class="form btn btn-success" type="submit" name="button">Submit Edit</button>
                                        </form>
                                        <form class="delete" action="/delete/{{store.id}}" method="post">
                                            <input name="_method" type="hidden" value="delete">
                                            <button class="btn btn-danger delete" type="submit" name="button">Delete </button>
                                        </form>
                                    </div>
                                </div>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>    
        <br />
        <div class = "col-sm-4">
            <div class = "row">
                    <button type="button" class="btn btn-default"><a href='/brands'>See All Brands</a></button>
                    <br>
                    <button type="button" class="btn btn-home"><a href='/'>Home</a></button>
            </div>
        </div>
    </div>
</body>
</html>
